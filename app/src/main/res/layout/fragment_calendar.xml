<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF"
    >

    <com.example.p.jumptime.Fragment.DatePickerTimeline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/calendar_new_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/calendar_aim_go_frame">
        <fragment
            android:id="@+id/calendar_aim_go"
            android:tag="calendar_aim_just"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.example.p.jumptime.Fragment.CalendarFragmentForAims"
            />
        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_in_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/spacing_middle"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="100dp"
            android:clickable="true"
            android:tint="#FFF"
            app:backgroundTint="@color/colorSecondary"
            app:fabSize="normal"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_plus"
            tools:ignore="VectorDrawableCompat" />



    </RelativeLayout>













</LinearLayout>